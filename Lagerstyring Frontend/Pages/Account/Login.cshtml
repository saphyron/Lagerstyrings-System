@page
@model LagerstyringFrontend.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>

<form method="post" asp-antiforgery="true" class="mt-3">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label class="form-label">Username</label>
        <input asp-for="Username" class="form-control" autocomplete="username" />
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input asp-for="Password" class="form-control" type="password" autocomplete="current-password" />
    </div>
    <button class="btn btn-primary">Sign in</button>
</form>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger mt-3">@Model.Error</div>
}
